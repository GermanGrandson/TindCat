var count = <%=@a%>
// document.getElementById("meow").onclick =
$(document).ready(function meow(){
  $("#meow").click(function(event){
    console.log('yo');
  $("#pic").animate({
    left: '1000px',
    opacity: '0',
    });
  if (count == 4){
    $("#match").fadeIn(10).animate({fontSize:'4.5em'});
  };
});
});
</script>


