<%= button_to "Woof", '#', :method => "get", id: 'bark', class:'btn btn-danger btn-lg'%>
</div>
<%#end%>
<div id="meow">
<%= button_to "Meow", '#', :method => "get", id: 'meow', class:'btn btn-success btn-lg'%>
</div>



<%=@a%>
<%=@catstate%>


<li><%= "City: " + @catcity.titleize%></li>
<li><%= "State: " + @catstate.titleize%></li>
<li><%= "College: " + @catu.titleize%></li>
<li><%= "Favorite Sport: " + @catsport.titleize%></li>
<li><%= "Favorite Book: " + @catbook.titleize%></li>
<li><%= "My Spirit Animal: " + @catspirit.titleize%></li>



